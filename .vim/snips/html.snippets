snippet input "各種input"
// スライダー
<input type="range" value="1" min="1" max="10" step="1"
  oninput="document.getElementById('output1').value=this.value">
<output id="output1">1</output>

// ラジオボタン
<input type="radio" name="choice" id="choice1"><label for="choice1">1</label>
<input type="radio" name="choice" id="choice2"><label for="choice2">2</label>
console.log(document.getElementsByName("choice")[1].checked)

// チェックボックス
<input type="checkbox" id="check">
var check = document.getElementById('check')
check.onchange = function () {
  console.log(check.checked)
}

// テキスト
<input type="text" id="input1">
document.getElementById('input1').value

// ボタン
<button type="button" name="button">Click Me</button>
button.addEventListener('click', function () {
  console.log('clickked')
}, false)

// ドロップダウン
<select name="text"> <!--'text' を使用する代わりに id を補ってください-->
  <option value="first">First Value</option> 
  <option value="second" selected>Second Value</option>
  <option value="third">Third Value</option>
</select>
endsnippet

